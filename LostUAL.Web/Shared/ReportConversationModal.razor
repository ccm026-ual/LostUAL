@using System.Net.Http.Json
@inject HttpClient Http

@if (Visible)
{
    <div class="claim-backdrop" @onclick="Close"></div>

    <div class="claim-modal" role="dialog" aria-modal="true">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="mb-1">Reportar conversación</h5>
                <div class="text-muted small">
                    Describe brevemente el motivo del reporte.
                </div>
            </div>

            <button class="btn btn-sm btn-outline-secondary" @onclick="Close" disabled="@IsSending">✕</button>
        </div>

        <textarea class="form-control mt-3"
                  rows="5"
                  placeholder="Escribe el motivo..."
                  @bind="Reason"
                  @bind:event="oninput"
                  @bind:after="ClearEmptyError"
                  disabled="@IsSending"></textarea>

        @if (ShowEmptyError)
        {
            <div class="alert alert-danger mt-2 mb-0">
                Escribe un motivo.
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(ApiError))
        {
            <div class="alert alert-danger mt-2 mb-0">
                @ApiError
            </div>
        }

        @if (Success)
        {
            <div class="alert alert-success mt-2 mb-0">
                Reporte enviado. Gracias.
            </div>
        }

        <div class="d-flex gap-2 mt-3">
            <button class="btn btn-danger"
                    @onclick="Submit"
                    disabled="@IsSending || Success">
                @(IsSending ? "Enviando..." : (Success ? "Enviado" : "Enviar reporte"))
            </button>

            <button class="btn btn-outline-secondary"
                    @onclick="Close"
                    disabled="@IsSending">
                @(Success ? "Cerrar" : "Cancelar")
            </button>
        </div>
    </div>
}

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public EventCallback<bool> VisibleChanged { get; set; }
    [Parameter] public int ConversationId { get; set; }

    private string Reason { get; set; } = "";
    private bool ShowEmptyError;
    private string? ApiError;
    private bool IsSending;
    private bool Success;

    private async Task Close()
    {
        Reason = "";
        ShowEmptyError = false;
        ApiError = null;
        IsSending = false;
        Success = false;

        await VisibleChanged.InvokeAsync(false);
    }

    private async Task Submit()
    {
        ApiError = null;

        if (string.IsNullOrWhiteSpace(Reason))
        {
            ShowEmptyError = true;
            return;
        }

        ShowEmptyError = false;
        IsSending = true;

        try
        {
            var res = await Http.PostAsJsonAsync(
                $"api/conversations/{ConversationId}/report",
                new { reason = Reason.Trim() });

            if (!res.IsSuccessStatusCode)
            {
                ApiError = await res.Content.ReadAsStringAsync();
                return;
            }

            Success = true;
        }
        catch (Exception ex)
        {
            ApiError = ex.Message;
        }
        finally
        {
            IsSending = false;
        }
    }

    private void ClearEmptyError() => ShowEmptyError = false;
}

<style>
    .claim-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,.55);
        z-index: 1040;
    }

    .claim-modal {
        position: fixed;
        left: 50%;
        top: 18%;
        transform: translateX(-50%);
        width: min(560px, calc(100% - 2rem));
        background: var(--bs-body-bg);
        color: var(--bs-body-color);
        border: 1px solid var(--bs-border-color);
        border-radius: .75rem;
        padding: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,.35);
        z-index: 1050;
    }
</style>
