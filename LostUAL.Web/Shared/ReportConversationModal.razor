@using LostUAL.Contracts.Reports
@inject HttpClient Http

@if (Visible)
{
    <div class="claim-backdrop" @onclick="Close"></div>

    <div class="claim-modal" role="dialog" aria-modal="true">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="mb-1">Reportar conversación</h5>
                <div class="text-muted small">
                    Describe brevemente el motivo del reporte.
                </div>
            </div>

            <button type="button"
                    class="btn btn-sm btn-outline-secondary"
                    @onclick="Close"
                    disabled="@IsSending">
                ✕
            </button>
        </div>

        <textarea class="form-control mt-3"
                  rows="5"
                  placeholder="Escribe el motivo..."
                  @bind="Reason"
                  @bind:event="oninput"
                  disabled="@IsSending"></textarea>

        @if (ShowEmptyError)
        {
            <div class="alert alert-danger mt-2 mb-0">
                Escribe un motivo.
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(ApiError))
        {
            <div class="alert alert-danger mt-2 mb-0">
                @ApiError
            </div>
        }

        <div class="d-flex gap-2 mt-3">
            <button type="button"
                    class="btn btn-danger"
                    @onclick="SubmitAsync"
                    disabled="@IsSending">
                @(IsSending ? "Enviando..." : "Enviar reporte")
            </button>

            <button type="button"
                    class="btn btn-outline-secondary"
                    @onclick="Close"
                    disabled="@IsSending">
                Cancelar
            </button>
        </div>
    </div>
}

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public EventCallback<bool> VisibleChanged { get; set; }
    [Parameter] public int ConversationId { get; set; }

    private string _reason = "";
    private string Reason
    {
        get => _reason;
        set
        {
            _reason = value;
            if (!string.IsNullOrWhiteSpace(_reason))
                ShowEmptyError = false;
        }
    }

    private bool ShowEmptyError;
    private string? ApiError;
    private bool IsSending;

    private async Task Close()
    {
        Reason = "";
        ShowEmptyError = false;
        ApiError = null;
        IsSending = false;

        await VisibleChanged.InvokeAsync(false);
    }

    private async Task SubmitAsync()
    {
        ApiError = null;

        var reason = (Reason ?? "").Trim();
        if (string.IsNullOrWhiteSpace(reason))
        {
            ShowEmptyError = true;
            return;
        }

        IsSending = true;
        try
        {
            // Igual que el post modal (misma forma)
            var res = await Http.PostAsJsonAsync(
                $"api/conversations/{ConversationId}/report",
                new ReportDto { Reason = reason });

            if (!res.IsSuccessStatusCode)
            {
                var body = await res.Content.ReadAsStringAsync();
                ApiError = string.IsNullOrWhiteSpace(body)
                    ? $"Error {(int)res.StatusCode} ({res.ReasonPhrase})"
                    : body;
                return;
            }

            // Igual que el post modal: cierro para que se note que ha funcionado
            await Close();
        }
        catch (Exception ex)
        {
            ApiError = ex.Message;
        }
        finally
        {
            IsSending = false;
        }
    }
}

