@using LostUAL.Contracts.Reports
@inject HttpClient Http

@if (IsOpen)
{
    <div class="claim-backdrop" @onclick="Close"></div>

    <div class="claim-modal" role="dialog" aria-modal="true">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="mb-1">Reportar post</h5>
                <div class="text-muted small">
                    Describe brevemente el motivo del reporte.
                </div>
            </div>

            <button class="btn btn-sm btn-outline-secondary" @onclick="Close" disabled="@IsBusy">✕</button>
        </div>

        <textarea class="form-control mt-3"
                  rows="5"
                  placeholder="Escribe el motivo..."
                  @bind="Reason"
                  @bind:event="oninput"
                  disabled="@IsBusy"></textarea>

        @if (ShowEmptyError)
        {
            <div class="alert alert-danger mt-2 mb-0">
                Escribe un motivo.
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(ApiError))
        {
            <div class="alert alert-danger mt-2 mb-0">@ApiError</div>
        }

        <div class="d-flex gap-2 mt-3">
            <button class="btn btn-danger" @onclick="SubmitAsync" disabled="@IsBusy">
                @(IsBusy ? "Enviando..." : "Enviar reporte")
            </button>

            <button class="btn btn-outline-secondary" @onclick="Close" disabled="@IsBusy">
                Cancelar
            </button>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }

    [Parameter] public int PostId { get; set; }

    private string _reason = "";
    private string Reason
    {
        get => _reason;
        set
        {
            _reason = value;
            if (!string.IsNullOrWhiteSpace(_reason))
                ShowEmptyError = false;
        }
    }

    private bool ShowEmptyError;
    private string? ApiError;
    private bool IsBusy;

    private async Task Close()
    {
        ApiError = null;
        ShowEmptyError = false;
        Reason = "";
        await IsOpenChanged.InvokeAsync(false);
    }

    private async Task SubmitAsync()
    {
        ApiError = null;

        var reason = (Reason ?? "").Trim();
        if (string.IsNullOrWhiteSpace(reason))
        {
            ShowEmptyError = true;
            return;
        }

        IsBusy = true;
        try
        {
            var res = await Http.PostAsJsonAsync($"api/posts/{PostId}/report", new ReportDto { Reason = reason });

            if (!res.IsSuccessStatusCode)
            {
                ApiError = await res.Content.ReadAsStringAsync();
                return;
            }

            await Close();
        }
        catch (Exception ex)
        {
            ApiError = ex.Message;
        }
        finally
        {
            IsBusy = false;
        }
    }
}

<style>
    .claim-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,.55);
        z-index: 1040;
    }

    .claim-modal {
        position: fixed;
        left: 50%;
        top: 18%;
        transform: translateX(-50%);
        width: min(560px, calc(100% - 2rem));
        background: var(--bs-body-bg);
        color: var(--bs-body-color);
        border: 1px solid var(--bs-border-color);
        border-radius: .75rem;
        padding: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,.35);
        z-index: 1050;
    }
</style>
