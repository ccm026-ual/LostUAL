@page "/my-posts"
@attribute [Authorize]
@using System.Net.Http.Json
@using LostUAL.Contracts.Posts
@inject HttpClient Http
@inject NavigationManager Nav

<div class="d-flex flex-wrap justify-content-between align-items-start gap-2 mb-3">
    <div>
        <h3 class="mb-1">Mis posts</h3>
        <div class="text-muted small">
            Gestiona tus publicaciones
        </div>
    </div>
</div>

<div class="container py-3">

    @if (_loading)
    {
        <p>Cargando...</p>
    }
    else if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger">@_error</div>
    }
    else
    {
        <div class="row g-4">

            <div class="col-12 col-lg-8">

                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row g-2 align-items-end">
                            <div class="col-12 col-md-4">
                                <label class="form-label">Estado</label>
                                <select class="form-select" @bind="_statusFilter">
                                    <option value="All">Todos</option>
                                    @foreach (var s in Enum.GetValues<PostStatus>())
                                    {
                                        <option value="@s">@s</option>
                                    }
                                </select>
                            </div>

                            <div class="col-12 col-md-4">
                                <label class="form-label">Tipo</label>
                                <select class="form-select" @bind="_typeFilter">
                                    <option value="All">Todos</option>
                                    @foreach (var t in Enum.GetValues<PostType>())
                                    {
                                        <option value="@t">@t</option>
                                    }
                                </select>
                            </div>

                            <div class="col-12 col-md-4">
                                <label class="form-label">Buscar</label>
                                <input class="form-control" @bind="_q" placeholder="Ej: llaves, mochila..." />
                            </div>

                            <div class="col-12 d-flex flex-wrap gap-2 mt-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="onlyPending"
                                           @bind="_onlyWithPendingClaims" />
                                    <label class="form-check-label" for="onlyPending">
                                        Solo con claims pendientes
                                    </label>
                                </div>

                                <div class="ms-auto d-flex gap-2">
                                    <label class="form-label mb-0 align-self-center text-muted small">Orden</label>
                                    <select class="form-select form-select-sm" style="max-width: 220px;" @bind="_sort">
                                        <option value="Newest">Más recientes</option>
                                        <option value="Oldest">Más antiguos</option>
                                        <option value="MostPending">Más claims pendientes</option>
                                    </select>

                                    <button class="btn btn-sm btn-outline-secondary" @onclick="ClearFilters">
                                        Limpiar
                                    </button>
                                </div>
                            </div>

                            <div class="col-12 text-muted small mt-2">
                                Mostrando <strong>@Filtered.Count</strong> de <strong>@_items.Count</strong>.
                            </div>
                        </div>
                    </div>
                </div>

                @if (Filtered.Count == 0)
                {
                    <div class="alert alert-info">No hay posts para los filtros seleccionados.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Tipo</th>
                                    <th>Estado</th>
                                    <th>Claims</th>
                                    <th>Creado</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var p in Filtered)
                                {
                                    <tr>
                                        <td>
                                            <a class="fw-semibold text-decoration-none"
                                               href="@($"/posts/{p.PostId}")">
                                                @p.Title
                                            </a>
                                        </td>

                                        <td>
                                            <span class="badge bg-secondary">@p.Type</span>
                                        </td>

                                        <td>
                                            <span class="badge @StatusBadge(p.Status)">@p.Status</span>
                                        </td>

                                        <td>
                                            @if (p.PendingClaimsCount > 0)
                                            {
                                                <span class="badge bg-warning text-dark">@p.PendingClaimsCount</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">0</span>
                                            }
                                        </td>

                                        <td class="text-muted">
                                            @p.CreatedAtUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                        </td>

                                        <td class="text-end">
                                            @if (p.AcceptedConversationId is int convId)
                                            {
                                                <button class="btn btn-sm btn-primary"
                                                        @onclick="@(() => Nav.NavigateTo($"/conversations/{convId}"))">
                                                    Ir al chat
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-outline-secondary"
                                                        @onclick="@(() => Nav.NavigateTo($"/claims-inbox?postId={p.PostId}"))">
                                                    Ver claims
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>

            <div class="col-12 col-lg-4">
                <div class="sticky-top" style="top: 1rem;">

                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="mb-3">Resumen</h5>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Total</span>
                                <strong>@_items.Count</strong>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Con claims pendientes</span>
                                <strong>@_items.Count(x => x.PendingClaimsCount > 0)</strong>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Con chat activo</span>
                                <strong>@_items.Count(x => x.AcceptedConversationId is not null)</strong>
                            </div>

                            <hr />

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Abiertos</span>
                                <strong>@_items.Count(x => x.Status == PostStatus.Open)</strong>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">En reclamación</span>
                                <strong>@_items.Count(x => x.Status == PostStatus.InClaim)</strong>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Cerrados/Resueltos</span>
                                <strong>@_items.Count(x => x.Status == PostStatus.Closed || x.Status == PostStatus.Resolved)</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>

@code {
    private bool _loading = true;
    private string? _error;

    private List<MyPostListItemDto> _items = new();

    private string _statusFilter = "All";
    private string _typeFilter = "All";
    private string _q = "";
    private bool _onlyWithPendingClaims = false;
    private string _sort = "Newest";

    private List<MyPostListItemDto> Filtered =>
        ApplyFiltersAndSort(_items).ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _loading = true;
        _error = null;

        try
        {
            _items = await Http.GetFromJsonAsync<List<MyPostListItemDto>>("/api/posts/mine") ?? new();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private IEnumerable<MyPostListItemDto> ApplyFiltersAndSort(IEnumerable<MyPostListItemDto> src)
    {
        var q = (_q ?? "").Trim();

        var filtered = src.Where(x =>
            (_statusFilter == "All" || x.Status.ToString() == _statusFilter) &&
            (_typeFilter == "All" || x.Type.ToString() == _typeFilter) &&
            (!_onlyWithPendingClaims || x.PendingClaimsCount > 0) &&
            (q.Length == 0 || (x.Title?.Contains(q, StringComparison.OrdinalIgnoreCase) ?? false))
        );

        return _sort switch
        {
            "Oldest" => filtered.OrderBy(x => x.CreatedAtUtc),
            "MostPending" => filtered
                .OrderByDescending(x => x.PendingClaimsCount)
                .ThenByDescending(x => x.CreatedAtUtc),
            _ => filtered.OrderByDescending(x => x.CreatedAtUtc),
        };
    }

    private void ClearFilters()
    {
        _statusFilter = "All";
        _typeFilter = "All";
        _q = "";
        _onlyWithPendingClaims = false;
        _sort = "Newest";
    }

    private static string StatusBadge(PostStatus s) => s switch
    {
        PostStatus.Open => "bg-success",
        PostStatus.InClaim => "bg-warning text-dark",
        PostStatus.Resolved => "bg-info text-dark",
        PostStatus.Closed => "bg-secondary",
        _ => "bg-light text-dark"
    };
}
