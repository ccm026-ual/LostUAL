@page "/posts/{Id:int}"
@inject HttpClient Http
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.WebUtilities
@using LostUAL.Contracts.Posts
@using LostUAL.Contracts.Reports
@using System.Net
@using System.Security.Claims
@using System.Net.Http.Json
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<h3>Detalle del post</h3>

@if (loading)
{
    <p>Cargando...</p>
}
else if (notFound)
{
    <div class="alert alert-warning">No existe ese post.</div>
}
else if (post is not null)
{
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
                <AuthorizeView Roles="Moderator,Admin">
                    <Authorized>
                        @if (PostReportId is not null)
                        {
                            @if (PostReport is null && string.IsNullOrWhiteSpace(ModError))
                            {
                                <div class="alert alert-secondary">Cargando reporte...</div>
                            }
                            else
                            {
                                @* Panel *@
                                <div class="card mb-3 border-warning">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <div class="fw-semibold">Reporte</div>

                                                @if (!string.IsNullOrWhiteSpace(ModError))
                                                {
                                                    <div class="alert alert-danger mt-2 mb-0">@ModError</div>
                                                }
                                                else if (PostReport is not null)
                                                {
                                                    <div class="mt-1 fw-semibold">@PostReport.Reason</div>

                                                    <div class="text-muted">
                                                        Estado: <strong>@PostReport.Status</strong>
                                                        · Reporter: <strong>@PostReport.ReporterEmail</strong>
                                                        · Post: <strong>@PostReport.PostStatus</strong>
                                                    </div>

                                                    @if (PostReport.PostStatus.ToString() == "Closed")
                                                    {
                                                        <div class="text-muted">
                                                            Cerrado: @PostReport.ClosedAtUtc?.ToLocalTime()
                                                            @if (!string.IsNullOrWhiteSpace(PostReport.ClosedReason))
                                                            {
                                                                <span> · Motivo: @PostReport.ClosedReason</span>
                                                            }
                                                        </div>
                                                    }

                                                    @if (PostReport.Status == ReportStatus.ActionTaken && !string.IsNullOrWhiteSpace(PostReport.BlockedEmail))
                                                    {
                                                        <div class="text-muted">
                                                            Bloqueado: <strong>@PostReport.BlockedEmail</strong>
                                                            @if (PostReport.LockoutEndUtc is not null)
                                                            {
                                                                <span> · Hasta: @PostReport.LockoutEndUtc.Value.ToLocalTime()</span>
                                                            }
                                                        </div>
                                                    }
                                                }
                                            </div>

                                            @if (PostReport?.Status == ReportStatus.Open)
                                            {
                                                <div style="min-width: 360px;">
                                                    <div class="row g-2">
                                                        <div class="col-4">
                                                            <input class="form-control" type="number" min="1" @bind="BlockDays" />
                                                        </div>
                                                        <div class="col-8">
                                                            <input class="form-control" placeholder="Nota (opcional)" @bind="ModNote" />
                                                        </div>
                                                    </div>

                                                    <div class="d-flex gap-2 mt-2">
                                                        <button type="button" class="btn btn-outline-secondary btn-sm" disabled="@(ModBusy)" @onclick="DismissPostReport">
                                                            Dismiss
                                                        </button>

                                                        <button type="button" class="btn btn-warning btn-sm" disabled="@(ModBusy)" @onclick="ClosePostFromReport">
                                                            Close post
                                                        </button>

                                                        <button type="button" class="btn btn-danger btn-sm" disabled="@(ModBusy)" @onclick="CloseBlockFromReport">
                                                            Close + Block
                                                        </button>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </Authorized>
                </AuthorizeView>

                <div>
                    <h5 class="card-title mb-1">@post.Title</h5>
                    <div class="text-muted small">
                        @post.Category · @post.Location · @post.DateApprox
                    </div>
                    <div class="mb-3 d-flex gap-2 align-items-center">

                        @* Owner: solo puede cerrar si está Open *@
                        @if (post.Status == PostStatus.Open && post.CreatedByUserId == _myUserId)
                        {
                            <button class="btn btn-warning" @onclick='() => ClosePostAsync("Owner closed")' disabled="@_closing">
                                @(_closing ? "Cerrando..." : "Cerrar post")
                            </button>
            
                        } 
                        @*Si está Open y no es el Owner entocnes puedo reclamar*@
                        @if (post.Status == PostStatus.Open && post.CreatedByUserId != _myUserId)
                        {
                            <button class="btn btn-primary" @onclick="OpenClaimModal">
                                Reclamar
                            </button>

                        }

                        @* Admin/Moderator: puede cerrar en Open y en InClaim *@
                        <AuthorizeView Roles="Admin,Moderator">
                            <Authorized>
                                @if (post.Status == PostStatus.Open || post.Status == PostStatus.InClaim)
                                {
                                    <button class="btn btn-warning" @onclick='() => ClosePostAsync("Moderation closed")' disabled="@_closing">
                                        @(_closing ? "Cerrando..." : "Cerrar (moderación)")
                                    </button>
                                }
                            </Authorized>
                        </AuthorizeView>
                        <AuthorizeView>
                            <Authorized>
                                <button type="button" class="btn btn-outline-danger" @onclick="() => ShowReportModal = true">
                                    Reportar post
                                </button>

                                <ReportPostModal PostId="@Id"
                                                 IsOpen="@ShowReportModal"
                                                 IsOpenChanged="@(v => ShowReportModal = v)" />
                            </Authorized>
                        </AuthorizeView>


                    </div>

                    @if (!string.IsNullOrWhiteSpace(_closeError))
                    {
                        <div class="alert alert-danger mt-2">@_closeError</div>
                    }

                </div>
                <div class="text-end">
                    <span class="badge bg-secondary me-1">@post.Type</span>
                    <span class="badge bg-info">@post.Status</span>
                </div>
            </div>

            <hr />

            <p class="mb-2">@post.Description</p>

            <div class="text-muted small">
                Creado: @post.CreatedAtUtc
            </div>
        </div>
    </div>

    <ClaimModal Show="_showClaim"
                Busy="_claiming"
                Error="@_claimError"
                OnClose="CloseClaimModal"
                OnSubmit="SubmitClaimAsync" />


}

@code {
    [Parameter] public int Id { get; set; }

    private bool loading = true;
    private bool notFound = false;
    private PostDetailDto? post;
    private string? _myUserId;
    private bool _closing;
    private string? _closeError;
    private bool ShowReportModal;

    private int? PostReportId;
    private PostReportSummaryDto? PostReport;

    private string? ModError;
    private bool ModBusy;
    private int BlockDays = 7;
    private string? ModNote;
    private bool _loadedSummary;


    protected override async Task OnParametersSetAsync()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var q = QueryHelpers.ParseQuery(uri.Query);

        PostReportId = null;
        if (q.TryGetValue("postReportId", out var rid) && int.TryParse(rid.ToString(), out var parsed))
            PostReportId = parsed;

        _loadedSummary = false;
        PostReport = null;
        ModError = null;

        await LoadPostAsync();
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        _myUserId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    }

    private async Task LoadPostAsync()
    {
        loading = true;
        notFound = false;
        post = null;

        try
        {
            post = await Http.GetFromJsonAsync<PostDetailDto>($"/api/posts/{Id}");
            if (post is null) notFound = true;
        }
        catch (HttpRequestException ex) when (ex.StatusCode == HttpStatusCode.NotFound)
        {
            notFound = true;
        }
        finally
        {
            loading = false;
        }
    }

    private async Task ClosePostAsync(string reason)
    {
        _closing = true;
        _closeError = null;

        try
        {
            var resp = await Http.PostAsJsonAsync($"/api/posts/{Id}/close", new ClosePostRequest { Reason = reason });

            if (resp.StatusCode == HttpStatusCode.Forbidden)
            {
                _closeError = "No tienes permisos para cerrar este post.";
                return;
            }

            if (resp.StatusCode == HttpStatusCode.BadRequest)
            {
                _closeError = await resp.Content.ReadAsStringAsync();
                return;
            }

            if (!resp.IsSuccessStatusCode)
            {
                _closeError = $"Error: {(int)resp.StatusCode} {resp.ReasonPhrase}";
                return;
            }

            await LoadPostAsync(); 
        }
        catch (Exception ex)
        {
            _closeError = ex.Message;
        }
        finally
        {
            _closing = false;
        }
    }

    private sealed class ClosePostRequest
    {
        public string? Reason { get; set; }
    }

    private bool _showClaim;
    private bool _claiming;
    private string? _claimError;

    private void OpenClaimModal()
    {
        _claimError = null;
        _showClaim = true;
    }

    private Task CloseClaimModal()
    {
        _showClaim = false;
        _claimError = null;
        return Task.CompletedTask;
    }

    private sealed class CreateClaimRequest
    {
        public string Message { get; set; } = "";
    }

    private sealed class CreateClaimResponse
    {
        public int ClaimId { get; set; }
        public int ConversationId { get; set; }
    }

    private async Task SubmitClaimAsync(string message)
    {
        message = (message ?? "").Trim();

        if (message.Length < 2)
        {
            _claimError = "Escribe un mensaje.";
            return;
        }

        _claiming = true;
        _claimError = null;

        try
        {
            var resp = await Http.PostAsJsonAsync($"/api/posts/{Id}/claims", new CreateClaimRequest { Message = message });

            if (resp.StatusCode == System.Net.HttpStatusCode.Conflict)
            {
                _claimError = "Ya has reclamado este post.";
                return;
            }

            if (!resp.IsSuccessStatusCode)
            {
                _claimError = await resp.Content.ReadAsStringAsync();
                if (string.IsNullOrWhiteSpace(_claimError))
                    _claimError = $"Error {(int)resp.StatusCode}";
                return;
            }

            var data = await resp.Content.ReadFromJsonAsync<CreateClaimResponse>();
            if (data is null || data.ConversationId <= 0)
            {
                _claimError = "Respuesta inválida del servidor.";
                return;
            }

            _showClaim = false;
            Nav.NavigateTo($"/conversations/{data.ConversationId}");
        }
        finally
        {
            _claiming = false;
        }
    }

    private async Task LoadPostReportSummaryAsync(int reportId)
    {
        ModError = null;
        try
        {
            PostReport = await Http.GetFromJsonAsync<PostReportSummaryDto>(
                $"api/moderation/posts/reports/{reportId}/summary");
        }
        catch (Exception ex)
        {
            ModError = ex.Message;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
    
        if (firstRender)
            _loadedSummary = false;

        if (!_loadedSummary && PostReportId is not null)
        {
            _loadedSummary = true;
            await LoadPostReportSummaryAsync(PostReportId.Value);
            StateHasChanged();
        }
    }

    private async Task DismissPostReport()
    {
        if (PostReportId is null) return;
        ModBusy = true; ModError = null;

        try
        {
            var res = await Http.PostAsJsonAsync(
                $"api/moderation/posts/reports/{PostReportId.Value}/dismiss",
                new DismissReportRequest { Note = ModNote });

            if (!res.IsSuccessStatusCode)
            {
                ModError = await res.Content.ReadAsStringAsync();
                return;
            }

            await LoadPostReportSummaryAsync(PostReportId.Value);
            await LoadPostAsync();
        }
        catch (Exception ex) { ModError = ex.Message; }
        finally { ModBusy = false; }
    }

    private async Task ClosePostFromReport()
    {
        if (PostReportId is null) return;
        ModBusy = true; ModError = null;

        try
        {
            var res = await Http.PostAsJsonAsync(
                $"api/moderation/posts/reports/{PostReportId.Value}/close",
                new DismissReportRequest { Note = ModNote });

            if (!res.IsSuccessStatusCode)
            {
                ModError = await res.Content.ReadAsStringAsync();
                return;
            }

            await LoadPostReportSummaryAsync(PostReportId.Value);
            await LoadPostAsync();
        }
        catch (Exception ex) { ModError = ex.Message; }
        finally { ModBusy = false; }
    }

    private async Task CloseBlockFromReport()
    {
        if (PostReportId is null) return;
        ModBusy = true; ModError = null;

        try
        {
            var res = await Http.PostAsJsonAsync(
                $"api/moderation/posts/reports/{PostReportId.Value}/close-block",
                new BlockUserRequest { Days = BlockDays, Note = ModNote });

            if (!res.IsSuccessStatusCode)
            {
                ModError = await res.Content.ReadAsStringAsync();
                return;
            }

            await LoadPostReportSummaryAsync(PostReportId.Value);
            await LoadPostAsync();
        }
        catch (Exception ex) { ModError = ex.Message; }
        finally { ModBusy = false; }
    }



}
