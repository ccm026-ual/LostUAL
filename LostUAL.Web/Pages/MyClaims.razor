@page "/my-claims"
@attribute [Authorize]

@using System.Net.Http.Json
@using LostUAL.Contracts.Claims
@using LostUAL.Contracts.Posts
@using LostUAL.Web.Shared
@inject HttpClient Http
@inject NavigationManager Nav

<div class="d-flex flex-wrap justify-content-between align-items-start gap-2 mb-3">
    <div>
        <h3 class="mb-1">Mis reclamaciones</h3>
        <div class="text-muted small">
            Gestiona tus reclamaciones
        </div>
    </div>
</div>

<div class="container py-3">

    @if (_loading)
    {
        <p>Cargando...</p>
    }
    else if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger">@_error</div>
    }
    else if (_items.Count == 0)
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center">
            <span>Aún no has realizado ninguna reclamación.</span>
            <button class="btn btn-sm btn-primary" @onclick="@(() => Nav.NavigateTo("/posts"))">
                Ver posts
            </button>
        </div>
    }
    else
    {
        <div class="row g-4">

            <div class="col-12 col-lg-8">

                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row g-2 align-items-end">

                            <div class="col-12 col-md-4">
                                <label class="form-label">Estado</label>
                                <select class="form-select" @bind="_statusFilter">
                                    <option value="All">Todos</option>
                                    @foreach (var s in Enum.GetValues<ClaimStatus>())
                                    {
                                        <option value="@s">@Labels.ClaimStatusLabel(s)</option>
                                    }
                                </select>
                            </div>

                            <div class="col-12 col-md-4">
                                <label class="form-label">Tipo</label>
                                <select class="form-select" @bind="_typeFilter">
                                    <option value="All">Todos</option>
                                    @foreach (var t in Enum.GetValues<PostType>())
                                    {
                                        <option value="@t">@Labels.PostTypeLabel(t)</option>
                                    }
                                </select>
                            </div>

                            <div class="col-12 col-md-4">
                                <label class="form-label">Buscar</label>
                                <input class="form-control" @bind="_q" @bind:event="oninput"
                                placeholder="Ej: llaves, mochila..." />
                            </div>

                            <div class="col-12 d-flex flex-wrap gap-2 mt-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="onlyUnread" @bind="_onlyUnread" />
                                    <label class="form-check-label" for="onlyUnread">
                                        Solo con mensajes nuevos
                                    </label>
                                </div>

                                <div class="ms-auto d-flex gap-2 align-items-center">
                                    <label class="text-muted small mb-0">Orden</label>
                                    <select class="form-select form-select-sm" style="max-width: 220px;" @bind="_sort">
                                        <option value="Newest">Más recientes</option>
                                        <option value="Oldest">Más antiguos</option>
                                        <option value="UnreadFirst">Primero los nuevos</option>
                                    </select>

                                    <button class="btn btn-sm btn-outline-secondary" @onclick="ClearFilters">
                                        Limpiar
                                    </button>
                                </div>
                            </div>

                            <div class="col-12 text-muted small mt-2">
                                Mostrando <strong>@Filtered.Count</strong> de <strong>@_items.Count</strong>.
                            </div>
                        </div>
                    </div>
                </div>

                @if (Filtered.Count == 0)
                {
                    <div class="alert alert-info">No hay reclamaciones para los filtros seleccionados.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th class="text-center">Post</th>
                                    <th class="text-center">Tipo</th>
                                    <th class="text-center">Estado</th>
                                    <th class="text-center">Creada</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var c in Filtered)
                                {
                                    <tr class="@(c.HasUnread ? "table-warning" : "")">
                                        <td class="text-center">
                                            @c.PostTitle
                                            @if (c.HasUnread)
                                            {
                                                <span class="badge bg-warning text-dark ms-2">Nuevo</span>
                                            }
                                        </td>

                                        <td class="text-center">
                                            <span class="badge bg-secondary">@Labels.PostTypeLabel(c.PostType)</span>
                                        </td>

                                        <td class="text-center">
                                            <span class="badge @ClaimBadge(c.Status)">@Labels.ClaimStatusLabel(c.Status)</span>
                                        </td>

                                        <td class="text-center">
                                            @c.CreatedAtUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                        </td>

                                        <td class="text-center">
                                            @if (c.ConversationId is int convId)
                                            {
                                                <button class="btn btn-sm @(c.HasUnread ? "btn-primary" : "btn-outline-primary")"
                                                        @onclick="@(() => Nav.NavigateTo($"/conversations/{convId}"))">
                                                    Abrir chat
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-outline-secondary" disabled>
                                                    Sin chat
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>

            <div class="col-12 col-lg-4">
                <div class="sticky-top" style="top: 1rem;">

                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="mb-3">Resumen</h5>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Total</span>
                                <strong>@_items.Count</strong>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Con mensajes nuevos</span>
                                <strong>@_items.Count(x => x.HasUnread)</strong>
                            </div>

                            <hr />

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Aceptadas</span>
                                <strong>@_items.Count(x => x.Status == ClaimStatus.Accepted)</strong>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Pendientes</span>
                                <strong>@_items.Count(x => x.Status == ClaimStatus.Pending)</strong>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Rechazadas</span>
                                <strong>@_items.Count(x => x.Status == ClaimStatus.Rejected)</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>

@code {
    private bool _loading = true;
    private string? _error;
    private List<MyClaimListItemDto> _items = new();

    private string _statusFilter = "All";
    private string _typeFilter = "All";
    private string _q = "";
    private bool _onlyUnread = false;
    private string _sort = "Newest";

    private List<MyClaimListItemDto> Filtered => ApplyFiltersAndSort(_items).ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _loading = true;
        _error = null;

        try
        {
            _items = await Http.GetFromJsonAsync<List<MyClaimListItemDto>>("/api/claims/mine") ?? new();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private IEnumerable<MyClaimListItemDto> ApplyFiltersAndSort(IEnumerable<MyClaimListItemDto> src)
    {
        var q = (_q ?? "").Trim();

        var filtered = src.Where(x =>
            (_statusFilter == "All" || x.Status.ToString() == _statusFilter) &&
            (_typeFilter == "All" || x.PostType.ToString() == _typeFilter) &&
            (!_onlyUnread || x.HasUnread) &&
            (q.Length == 0 || (x.PostTitle?.Contains(q, StringComparison.OrdinalIgnoreCase) ?? false))
        );

        return _sort switch
        {
            "Oldest" => filtered.OrderBy(x => x.CreatedAtUtc),
            "UnreadFirst" => filtered
                .OrderByDescending(x => x.HasUnread)
                .ThenByDescending(x => x.CreatedAtUtc),
            _ => filtered.OrderByDescending(x => x.CreatedAtUtc),
        };
    }

    private void ClearFilters()
    {
        _statusFilter = "All";
        _typeFilter = "All";
        _q = "";
        _onlyUnread = false;
        _sort = "Newest";
    }

    private static string ClaimBadge(ClaimStatus s) => s switch
    {
        ClaimStatus.Accepted => "bg-success",
        ClaimStatus.Pending => "bg-warning text-dark",
        ClaimStatus.Rejected => "bg-danger",
        ClaimStatus.Withdrawn => "bg-secondary",
        _ => "bg-light text-dark"
    };
}
