@page "/register"
@using System.ComponentModel.DataAnnotations
@inject LostUAL.Web.Auth.AuthService Auth
@inject NavigationManager Nav

<div class="container py-3">

    <div class="d-flex flex-wrap justify-content-between align-items-start gap-2 mb-3">
        <div>
            <h3 class="mb-1">Registro</h3>
        </div>
    </div>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}
@if (!string.IsNullOrWhiteSpace(_success))
{
    <div class="alert alert-success">@_success</div>
}

<EditForm Model="_model" OnValidSubmit="DoRegister">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control" @bind-Value="_model.Email" />
    </div>

    <div class="mb-3">
        <label class="form-label"> Contraseña
            <span class="small text-muted ms-2">
                ( Mínimo 6 caracteres, con mayúscula, minúscula, número y carácter especial)
            </span>
        </label>
        <InputText class="form-control" type="password" @bind-Value="_model.Password" />
    </div>

    <div class="mb-3">
        <label class="form-label">Confirmar contraseña</label>
        <InputText class="form-control" type="password" @bind-Value="_model.ConfirmPassword" />
    </div>

    <button class="btn btn-primary" type="submit" disabled="@_busy">
        @(_busy ? "Creando..." : "Crear cuenta")
    </button>

    <button class="btn btn-link" type="button" @onclick="@(() => Nav.NavigateTo("/login"))">
        Volver a login
    </button>
</EditForm>
</div>

@code {
    private readonly RegisterVm _model = new();
    private bool _busy;
    private string? _error;
    private string? _success;

    private async Task DoRegister()
    {
        _busy = true;
        _error = null;
        _success = null;

        if (_model.Password != _model.ConfirmPassword)
        {
            _error = "Las contraseñas no coinciden.";
            _busy = false;
            return;
        }

        var (ok, error) = await Auth.RegisterAsync(_model.Email, _model.Password);

        _busy = false;

        if (!ok)
        {
            _error = error;
            return;
        }

        _success = "Cuenta creada. Ya puedes iniciar sesión.";
        Nav.NavigateTo("/login");
    }

    private sealed class RegisterVm
    {
        [Required(ErrorMessage = "El email es obligatorio.")]
        [RegularExpression(@"^[^@\s]+@(ual\.es|inlumine\.ual\.es)$",
        ErrorMessage = "Solo se permiten emails @ual.es o @inlumine.ual.es.")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "La contraseña es obligatoria.")]
        [MinLength(6, ErrorMessage = "La contraseña debe tener al menos 6 caracteres.")]
        [RegularExpression(@"^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9]).{6,}$",
        ErrorMessage = "La contraseña debe tener mínimo 6 caracteres e incluir al menos 1 mayúscula, 1 minúscula, 1 número y 1 carácter especial.")]
        public string Password { get; set; } = "";

        [Required(ErrorMessage = "La confirmación es obligatoria.")]
        [Compare(nameof(Password), ErrorMessage = "Las contraseñas no coinciden.")]
        public string ConfirmPassword { get; set; } = "";
    }
}
