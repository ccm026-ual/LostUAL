@page "/claims-inbox"
@attribute [Authorize]

@using System.Net.Http.Json
@using LostUAL.Contracts.Claims
@inject HttpClient Http
@inject NavigationManager Nav

<h3>Reclamaciones recibidas</h3>

@if (_loading)
{
    <p>Cargando...</p>
}
else if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}
else if (_items.Count == 0)
{
    <div class="alert alert-info">No tienes reclamaciones recibidas.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Post</th>
                <th>Claimant</th>
                <th>Estado</th>
                <th>Creada</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in _items)
            {
                <tr>
                    <td>
                        <a href="" @onclick="@(() => Nav.NavigateTo($"/posts/{c.PostId}"))" @onclick:preventDefault="true">
                            @c.PostTitle
                        </a>
                        <div class="small text-muted">@c.PostType</div>
                    </td>
                    <td>
                        @(!string.IsNullOrWhiteSpace(c.ClaimantEmail) ? c.ClaimantEmail : c.ClaimantUserId)
                    </td>
                    <td>@c.Status</td>
                    <td>@c.CreatedAtUtc.ToLocalTime()</td>
                    <td class="text-end">
                        @if (c.ConversationId is int convId)
                        {
                            <button class="btn btn-sm btn-primary"
                                    @onclick="@(() => Nav.NavigateTo($"/conversations/{convId}"))">
                                Abrir chat
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-secondary" disabled>Sin chat</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool _loading = true;
    private string? _error;
    private List<InboxClaimListItemDto> _items = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _loading = true;
        _error = null;

        try
        {
            _items = await Http.GetFromJsonAsync<List<InboxClaimListItemDto>>("/api/claims/inbox") ?? new();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }
}
